    "configurations": [
        {
            "name": "fastapi_debug",
            "type": "debugpy",
            "request": "launch",
            "program": "api/app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
